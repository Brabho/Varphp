<Files .htaccess>
    Order deny,allow
    Deny from all
    Allow from none
</Files>

Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On
    ## Un Comment the code below for directory
    #RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.+)$ index.php/$1 [QSA,L]
</IfModule>

## Set Static Error File Path
SetEnv ERROR_PATH "__VP/includes/error.php"

## Set Root Path
SetEnv ROOT_PATH "c:/xampp/htdocs/www/Varphp/v3.4/"
